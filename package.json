{
  "name": "anvara-takehome",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "clean:ports": "lsof -ti:3847,4291,5555 | xargs kill -9 2>/dev/null || echo 'All ports are free'",
    "dev": "pnpm -r dev",
    "e2e": "pnpm -r e2e",
    "format": "pnpm -r format",
    "lint": "pnpm -r lint",
    "reset": "pnpm dlx tsx scripts/reset.ts",
    "setup-project": "pnpm dlx tsx scripts/setup.ts",
    "stop": "docker compose down",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@anvara/prettier-config": "workspace:*",
    "@playwright/test": "^1.57.0",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.8.0",
    "tsx": "^4.21.0"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "bcrypt",
      "better-sqlite3",
      "esbuild",
      "prisma",
      "sharp"
    ]
  }
}
